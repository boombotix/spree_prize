<%# TODO: put the stylesheets in a yeild :head %>
<%= stylesheet_link_tag 'flipclock' %>
<%= stylesheet_link_tag 'prizes' %>


<div class="banner-box">
  <div class="container">
    <div class="text-box">
      <div class="wrap-container">
        <div class="wrap">
          <h2>FTW</h2>
        </div>
        <div class="wrap">
          <h3>FOR THE WIN</h3>
        </div>
        <div class="wrap">
          <h4>SICK SWAG PACKS EVERY WEEK</h4>
        </div>
      </div>
      <div class="wrap hidden-xs">
        <div class="wrap-title">
          <h5>ENTER HERE</h5>
        </div>
      </div>
      <div class="wrap-container">
      <% unless @prizes.empty? %>
        <div class="form-area">
          <%= form_for Spree::Candidate.new, format: :json, url: prize_candidates_path(@prizes.first, Spree::Candidate.new), remote: true do |candidate| %>
            <div class="form-box clearfix">
              <%= candidate.text_field :email, placeholder: 'Email Address' %>
              <%= button_tag 'ENTER NOW' %>
            </div>
          <% end %>
        </div>
      <% end %>
        <div class="wrap-social-area">
          <div class="social-area">
            <h6>Share</h6>
            <ul class="social-box clearfix">
              <%# TODO: add social sharing links %>
              <li>
                <a href="#">
                  <i class="fa fa-facebook fa-2x"></i>
                </a>
              </li>
              <li>
                <a href="#">
                  <i class="fa fa-twitter fa-2x"></i>
                </a>
              </li>
              <li>
                <a href="#">
                  <i class="fa fa-instagram fa-2x"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="main-content">
  <div class="container">
    <div class="top-area clearfix">
      <div class="wrap-row clearfix">
        <div class="left-cell">
          <h2>THIS WEEK&apos;S PRIZE</h2>
        </div>
        <div class="right-cell">
          <div class="timer-box">
          <% if !@prizes.empty? %>
            <h6>Next drawing in:</h6>
            <div class="wrap-clock">
              <div class="clock clearfix" data-time="<%= @prizes.first.remaining %>"></div>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
    <% @prizes.each do |p| %>
      <div class="wrap-row clearfix">
        <div class="left-cell">
          <h3><%= p.title %></h3>
        </div>
        <div class="right-cell">
          <div class="wrap-img">
            <% if p.image_file_name %>
              <%= image_tag p.image.url(:medium) %>
            <% end %>
          </div>
        </div>
        <p><%= p.description %></p>
      </div>

      <div class="form-search form-area">
        <%= form_for Spree::Candidate.new, format: :json, url: prize_candidates_path(p, Spree::Candidate.new), remote: true do |candidate| %>
          <div class="form-box clearfix">
            <%= candidate.text_field :email, placeholder: 'Email Address' %>
            <%= button_tag 'ENTER NOW' %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="table-box">
      <h2>THE WINNER&apos;S CIRCLE</h2>
      <div class="wrap-table">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th>City</th>
              <th>Prize</th>
            </tr>
          </thead>
          <tbody>
            <% @winners.each do |winner| %>
              <tr>
                <td><%= winner.winable.end_time.strftime('%m/%d/%y') %></td>
                <td><%= winner.name %></td>
                <td><%= "#{winner.city} - #{winner.state}" %></td>
                <td><%= winner.winable.title %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>  
    </div>
  </div>
</div>

<%# TODO: handle success from email submission %>
<script>
$(document).ready(function(){


  if ($('.clock').length) {
    var time_remaining = $('.clock').attr('data-time');
    $('.clock').FlipClock(time_remaining, {
      clockFace: 'DailyCounter',
      countdown: true,
      showSeconds: false,
      autoStart: true
    });
  }
});
</script>